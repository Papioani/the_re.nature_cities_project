{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "./dist", // Specify the output directory for compiled JS
    "rootDir": "./src" // Define the source folder for compilation
  },
  "include": [
    "src/app/drive-to-gcs-function/**/*" // Specify the path to your function files
  ],
  "exclude": ["node_modules"]
}
